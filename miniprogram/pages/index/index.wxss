  font-size: 28rpx;
  color: #666;
  display: inline-block;
  animation: marquee 15s linear infinite;
}

.announcement-text.highlight {
  color: #FF6B6B;
}

@keyframes marquee {
  0% { transform: translateX(100%); }
  100% { transform: translateX(-100%); }
}

